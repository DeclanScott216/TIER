# Podfile stub for non-macOS local development
# Codemagic will run this on macOS and generate the real pods

platform :ios, '12.0'

use_frameworks!
use_modular_headers!

# Only load Flutter podhelper if it exists (Codemagic will have it)
flutter_application_path = '../'
podhelper_path = File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb')

if File.exist?(podhelper_path)
  eval(File.read(podhelper_path), binding)
else
  # Minimal fallback to avoid crashes
  target 'Runner' do
    pod 'Flutter', :path => File.join(flutter_application_path, 'bin', 'cache', 'artifacts', 'engine', 'ios')
  end
end
